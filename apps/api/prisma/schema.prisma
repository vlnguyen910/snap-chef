generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum UserRoles {
  USER
  MODERATOR
  ADMIN
}

model User {
  id         String    @id @default(cuid())
  email      String    @unique
  password   String
  username   String
  role       UserRoles
  avatar_url String?
  is_active  Boolean   @default(true)
  bio        String?
  create_at  DateTime  @default(now())

  //Relations
  recipe Recipe[]
  likes  Like[]
  comments Comment[]
}

enum RecipeStatus {
  DRAFT
  PUBLISHED
  PENDING
  REJECTED
}

model Recipe {
  id            Int          @id @default(autoincrement())
  author_id     String
  title         String
  description   String?
  servings      Int
  cooking_time  Int
  thumbnail_url String
  status        RecipeStatus
  created_at    DateTime     @default(now())
  updated_at    DateTime     @updatedAt

  //Relations
  user  User @relation(fields: [author_id], references: [id])
  ingredients RecipeIngredient[]
  steps Step[]
  likes Like[]
  comments Comment[]
}

model Ingredient {
  id   Int    @id @default(autoincrement())
  name String @unique

  recipeIngredients RecipeIngredient[]
}

model RecipeIngredient {
  id            Int    @id @default(autoincrement())
  recipe_id     Int
  ingredient_id Int
  quantity      Float
  unit          String

  //Relations
  recipe     Recipe     @relation(fields: [recipe_id], references: [id])
  ingredient Ingredient @relation(fields: [ingredient_id], references: [id])
}

model Step {
  id          Int     @id @default(autoincrement())
  recipe_id   Int
  order_index Int
  image_url   String?
  content     String

  //Relations
  recipe Recipe @relation(fields: [recipe_id], references: [id])
}

model Like {
  user_id   String
  recipe_id Int
  
  //Relations
  user   User   @relation(fields: [user_id], references: [id])
  recipe Recipe @relation(fields: [recipe_id], references: [id])
  @@id([user_id, recipe_id])
}

model Comment {
  id         Int      @id @default(autoincrement())
  user_id    String
  recipe_id  Int
  content    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  //Relations
  user   User   @relation(fields: [user_id], references: [id])
  recipe Recipe @relation(fields: [recipe_id], references: [id])
}